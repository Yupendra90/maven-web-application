node{
    properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '5')), pipelineTriggers([pollSCM('* * * * *')])])
    def mavenHome = tool name: "maven3.8.6"
    try{
    stage('checkoutcode'){
     git branch: 'development', credentialsId: '515da19b-bdfc-4706-88ab-f19c82508c58', url: 'https://github.com/Yupendra90/maven-web-application.git'   
    }
    stage('Build'){
        sh "${mavenHome}/bin/mvn clean package"
    }
    stage('ExecuteSonarReport'){
        sh "${mavenHome}/bin/mvn clean sonar:sonar"
    }
    stage('UploadArtifactinRepos'){
        sh "${mavenHome}/bin/mvn clean deploy"
    }
    stage('DeployToserver'){
        sshagent(['8dcad4b6-4a21-40de-a24c-15fb9e794f1d']) {
        sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@172.31.4.225:/opt/apache-tomcat-9.0.74/webapps/"
}
    }
   catch(e) {
            slackNotifications(currentBuild.result)
            throw e
}
finally {
         slackNotifications(currentBuild.result)
}
}
//slack notification 
def slackNotifications(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESS'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESS') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary)
}
